<h1>Ticket order information</h1>

</div>
<p>Bought date: <%= @ticket.created_at.strftime '%d.%m.%Y %H:%M' %></p>
<p>Customer email: <%= @ticket.user.email %> </p>
<table>
  <tbody>
  <tr>
    <th>Ticket number</th>
    <td><%= @ticket.number %></td>
  </tr>
  <tr>
    <th>Train number</th>
    <td><%= @ticket.train.number %></td>
  </tr>
  <tr>
    <th>Start station</th>
    <td>
      <%= @ticket.start_station.title %>
    </td>
  </tr>
  <tr>
    <th>End station</th>
    <td>
      <%= @ticket.end_station.title %>
    </td>
  </tr>
  </tbody>
</table>

