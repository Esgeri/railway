<% if user_signed_in? %>
  <%= "Hi, #{current_user.user_initials}!" %>
  <p><%= link_to 'Mine tickets', tickets_path if !current_user.admin? %></p>

  <p>Account: <%= current_user.email %></p>

  <p><%= link_to 'Admin panel', admin_welcome_index_path  if current_user.admin? %></p>

  <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to 'Log in', new_user_session_path %>
<% end %>
