<%= form_for :search do |f| %>

  <div class="field">
    <%= f.label :start_station, 'Start station' %>
    <%= f.collection_select :start_station_id, RailwayStation.ordered, :id, :title %>
  </div>

  <div class="field">
    <%= f.label :end_station, 'End station' %>
    <%= f.collection_select :end_station_id, RailwayStation.ordered, :id, :title %>
  </div>

  <div class="actions">
    <%= submit_tag 'Search' %>
  </div>
<% end %>
