<%= form_for(train) do |f| %>
  <%= render 'common/errors', resource: @train %>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :current_station, "Current station" %>
    <%= f.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="field">
    <%= f.label :route, "Current route" %>
    <%= f.collection_select :route_id, Route.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :sort_carriage, "ASC sort" %>
    <%= f.check_box :sort_carriage %>
  </div>

  <div class="actions">
    <%= f.submit "#{ @train.new_record? ? 'Create' : 'Update' }" %>
  </div>
<% end %>
