<div class="row grid-bottom">
  <% hidden = false unless local_assigns[:hidden] %>
  <%= form_for([:admin, station], html: { style: "display: #{hidden ? 'none' : 'block'}" }) do |f| %>
    <%= render 'common/errors', resource: station %>

    <div class="col-md-4 col-lg-3">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <br />
      <%= f.submit t('.submit', action: station.new_record? ? 'Создать' : 'Изменить'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
