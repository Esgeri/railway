<h1><%= t('.ticket_info') %></h1>

<table>
  <tbody>
    <tr>
      <th><%= t('.ticket_number') %></th>
      <td><%= @ticket.number %></td>
    </tr>
    <tr>
      <th><%= t('.train_number') %></th>
      <td><%= link_to @ticket.train.number, admin_train_path(@ticket.train) %></td>
    </tr>
    <tr>
      <th><%= t('.customer_name') %></th>
      <td><%= @ticket.user.user_initials %></td>
    </tr>
    <tr>
      <th><%= t('.customer_email') %></th>
      <td><%= @ticket.user.email %></td>
    </tr>
    <tr>
      <th><%= t('.bought_date') %></th>
      <td><%= @ticket.created_at.strftime '%d.%m.%Y %H:%M' %></td>
    </tr>
    <tr>
     <th><%= t('.ticket_route') %></th>
     <td><%= link_to @ticket.train.route.name, admin_route_path(@ticket.train.route) %></td>
   </tr>
   <tr>
    <th><%= t('.start_station') %></th>
    <td>
      <%= @ticket.start_station.title %>
      ( <%= @ticket.start_station.change_arrival_time_in(@ticket.train.route) %>)
    </td>
  </tr>
  <tr>
    <th><%= t('.start_station') %></th>
    <td>
      <%= @ticket.end_station.title %>
      ( <%= @ticket.end_station.change_departure_time_in(@ticket.train.route) %>)
    </td>
  </tr>
</tbody>
</table>

<h2><%= t('.passenger_info') %></h2>
<table>
  <tbody>
    <tr>
      <th><%= t('.passenger_name') %></th>
      <td><%= @ticket.passenger_name %></td>
    </tr>
    <tr>
      <th><%= t('.passport_number') %></th>
      <td><%= @ticket.passport_number %></td>
    </tr>
  </tbody>
</table>

<%= link_to t('common.edit'), edit_admin_ticket_path(@ticket) %> |
<%= link_to t('common.back'), admin_tickets_path %>
