<div class="row grid-bottom">
  <% hidden = false unless local_assigns[:hidden] %>
  <%= form_for([:admin, train], html: { style: "display: #{hidden ? 'none' : 'block'}" }) do |f| %>
    <%= render 'common/errors', resource: train %>

    <div class="col-md-4 col-lg-3">
      <%= f.label :number %>
      <%= f.text_field :number, class: 'form-control grid-bottom-small' %>

      <%= f.label :current_station %>
      <%= f.collection_select :current_station_id, RailwayStation.all, :id, :title, {}, { class: 'form-control grid-bottom-small' } %>

      <%= f.label :route %>
      <%= f.collection_select :route_id, Route.all, :id, :name, {}, { class: 'form-control grid-bottom-small' } %>

      <%= f.label :sort_carriage %>
      <%= f.check_box :sort_carriage %>

      <%= f.submit t('.submit', action: train.new_record? ? 'Создать' : 'Изменить'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
